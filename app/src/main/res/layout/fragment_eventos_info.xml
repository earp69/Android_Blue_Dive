<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.campaigns.CampaignsAddFragment"
    android:layout_marginBottom="60dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_frag_campg_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margen_ll"
            android:layout_marginRight="@dimen/margen_ll"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_frag_camp_info_logo"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/icono2" />

            <TextView
                android:id="@+id/tv_info_nombre_ev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:backgroundTint="@color/color_componentes_reg" />

            <ImageView
                android:id="@+id/iv_frag_ev_info_imagen"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_info_fecha_ev_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:backgroundTint="@color/color_componentes_reg" />

            <TextView
                android:id="@+id/tv_info_obj_ev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margen_ll"
                android:textSize="18sp"
                android:textStyle="italic"
                android:backgroundTint="@color/color_componentes_reg" />

            <Button
                android:id="@+id/btn_info_apunt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_ll"
                android:text="@string/btn_info_apnt"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>